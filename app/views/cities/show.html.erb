<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="mt-5 text-primary">Ville sélectionnée : <%= @city.name %></h1>
    </div>
  </div>

  <h2 class="mt-4">Utilisateurs de cette ville :</h2>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <%= link_to user.first_name, user_path(user), class: "text-secondary" %>
      </li>
    <% end %>
  </ul>

  <h2 class="mt-4">Gossips écrits par les utilisateurs de cette ville :</h2>
  <ul class="list-group">
    <% @gossips.each do |gossip| %>
      <li class="list-group-item">
        <%= link_to gossip.title, gossip_path(gossip), class: "text-secondary" %>
      </li>
    <% end %>
  </ul>
</div>
